{
	"manifest_version": 2,
	"name": "Emoji to English",
	"version": "3",
	"description": "Translates emojis to their Unicode names",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"constants.js",
				"settings-interface.js",
				"styler.js",
				"names-dict.js", 
				"emoji-replacer.js", 
				"twitter-decoder.js", 
				"dom-manipulator.js",
				"orchestrator.js",
				"context-menu-interface.js"
			],
			"css": ["emoji-to-english.css"]
		}
	],
	"background": {
		"scripts": [
			"constants.js",
			"settings-migrator.js",
			"settings-manager.js",
			"context-menu-handler.js"
		],
		"persistent": false
	},
	"applications": {
		"gecko": {
			"id": "emojisToEnglish@szupie"
		}
	},
	"options_ui": {
		"page": "settings-panel/settings.html"
	},
	"permissions": [
		"storage",
		"contextMenus"
	],
	"default_locale": "en"
}
